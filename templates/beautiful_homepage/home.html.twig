<style>
{# header #}
header {
    height: 20vh;
    background: url('https://cdn.pixabay.com/photo/2020/04/15/14/45/microphone-5046876_960_720.jpg') no-repeat;
    background-size: 100% 100%;
}

{# navbar #}
ul{
    display: flex;
    margin: 0px;
    background: black;
    color: white;
}

li{
    list-style-type: none;
    padding: 0% 3%;
}

{# card #}
.container{
    position: relative;
    margin: 2vw;
    border: solid 1px black;
    border-radius: 15px;
    width: 30vw;
}

.image img{
    width: 100%;
    margin: auto;
    border-radius: 15px;
}

.text, p{
    padding: 5% 2%;
    text-align: center;
}

h1{
    margin: 10px 0px 10px;
}

h3{
    color: grey;
    font-style: oblique;
    font-weight: light;
}

{# general layout #}
main{
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

